(defwindow bar
    :monitor 0
    :stacking "fg"
    :exclusive true
    :geometry (geometry
        :width "100%"
        :height "25px"
        :anchor "top center"
    )
    (box (
        (date)
        (time)
    ))
)

(defwidget date [] "${date}")
(defwidget time [] "${time}")

(defpoll date
    :interval "30s"
    "date +'%Y-%m-%d'"
)
(defpoll time
    :interval "1s"
    "date +'%H:%M'"
)

