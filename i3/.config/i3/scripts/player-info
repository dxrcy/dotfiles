#!/bin/sh

bar_color="#7f7fff"

song="$(playerctl metadata -f '{{title}} - {{artist}}')"
time="$(playerctl metadata -f '{{duration(position)}} / {{duration(mpris:length)}}')"
percent="$(playerctl metadata -f '{{position / mpris:length * 100}}')"
status=''
[ "$(playerctl status)" = 'Playing' ] && status=''

~/scripts/cmd/bt status && charge="|  $(~/scripts/cmd/bt charge)"

dunstify -r 9238 -t 1000 "$song" "$status $time $charge" -h int:value:"${percent%.*}" -h string:hlcolor:"$bar_color"

